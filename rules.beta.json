{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"moeb"
		],
		"description": "This is my test version for the rule-list",
		"title": "Moeb's test ruleset",
		"update_url": "https://raw.githubusercontent.com/moebkun/lists/main/rules.beta.bjson"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Name match",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"matchroom.live/snooker",
						"braaaap \\d+",
						"swonk bot \\d+",
						"[VALVE]Niggerkiller",
						"[VALVE] Twilight Sparkle"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Invisible Character/namestealer",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u205f",
						"\u200f",
						"\u200e",
						"\u200d",
						"\u200c",
						"\u200b",
						"\u2060",
						"\u202c",
						"\u202d",
						"\ufeff",
						"\u0e4a"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Avatar match",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "06f5f3319f23911d598a0eaaa0267ce6ebac10f6"
					}
				]
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Malicious chat message detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\n",
						"\r\n",
						"\r"
					]
				},
				"mode": "match_any"
			}
		},
		{
			"actions": {
				"mark": [
					"racist"
				]
			},
			"description": "[BETA]Bigot detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"\\w*N󠀡󠀡IGGE󠀡󠀡R\\w*",
						"\\w*ɴɪɢɢᴇʀ\\w*",
						"\\w*nіggеr\\w*",
						"\\w*NÍGGER\\w*",
						"\\w*n\\\\|gger\\w*",
						"\\w*niggеr\\w*",
						"\\w*N1GG3R\\w*",
						"\\w*nigger\\w*",
						"\\w*nigg4\\w*",
						"\\w*niggz\\w*",
						"niggers"
					]
				},
				"mode": "match_any"
			}
		}
	]
}

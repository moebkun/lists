{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"moeb"
		],
		"description": "Name/Avatar matching",
		"title": "Generic Rules"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "generic naming rule",
			"triggers": {
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"matchroom.live/snooker",
						"braaaap \\d+",
						"swonk bot \\d+",
						"[VALVE]Niggerkiller"
					]
				}
			},
			"description": "Invisible Character",
			"triggers": {
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u0e4a",
						"\u202c"
					]
				}
			},
			"description": "Avatar Matching",
			"triggers": {
				"avatar_match": [
					{
					"avatar_hash": ""
					}
				]		
			}
		}
	]
}

{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"moeb"
		],
		"description": "Name/Avatar matching",
		"title": "Generic Rules"
		"update_url": "https://raw.githubusercontent.com/moebkun/lists/main/rules.namestealer.json"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "generic rules",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"matchroom.live/snooker",
						"braaaap \\d+",
						"swonk bot \\d+",
						"[VALVE]Niggerkiller",
						"\u0e4a",
						"\u202c"
					]
				}
			}
		}
	]
}

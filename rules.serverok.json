{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"serverok"
		],
		"description": "Frequently updated name-based bot, known cheaters and extended racism rule-list",
		"title": "serverok's rules maybe dk",
		"update_url": "https://raw.githubusercontent.com/Server-ok/lists/main/rules.beta.json"
	},
	"rules": [
		{
			"actions": {
				"transient_mark": [
					"cheater"
				]
			},
			"description": "[BETA]Invisible Character/namestealer",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u205f",
						"\u0e49",
						"\u200f",
						"\u200e",
						"\u200d",
						"\u200c",
						"\u200b",
						"\u2060",
						"\u202c",
						"\u202d",
						"\ufeff",
						"\u0e4a",
						"\u0e31",
						"\n"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Avatar match",
			"triggers": {
				"avatar_match": [
				]
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Malicious chat message detected",
			"triggers": {
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\n",
						"\r\n",
						"\r"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"racist"
				]
			},
			"description": "[TF2BD]Bigot detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"\\w*N\udb40\udc21\udb40\udc21IGGE\udb40\udc21\udb40\udc21R\\w*",
						"\\w*\u0274\u026a\u0262\u0262\u1d07\u0280\\w*",
						"\\w*n\u0456gg\u0435r\\w*",
						"\\w*N\u00cdGGER\\w*",
						"\\w*nigg\u0435r\\w*",
						"\\w*N1GG3R\\w*",
						"\\w*nigger\\w*",
						"\\w*nigg4\\w*",
						"\\w*niggz\\w*",
						"niggers"
					]
				},
				"mode": "match_any"
			}
		}
	]
}
